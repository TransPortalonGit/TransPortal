					<li class="divider"></li>
					<?php
					for ($a=1; $a<= count($steps); $a++) {
						echo '<li><a href="#section'.$a.'" class="goto"> '.$a.': '. $headings[$a-1].'<i class="icon-chevron-right"></i></a></li>';
					}
					?>
				</ul>
		</div>
