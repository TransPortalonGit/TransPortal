      <?php $dueitemcount = $dueitemcount + 1 ?>
      <?php endif; ?>
    <?php endforeach; ?>
    
    <!-- Echo the number of items + message -->
    <?php if($dueitemcount > 0): ?>
      <span style = "color: red"><?php echo $dueitemcount; ?></span> 
      
